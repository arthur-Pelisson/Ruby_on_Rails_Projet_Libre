<div class="form-style-8">
  <h1>New Article</h1>
  
  <%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, required: true%>
  </p>
  
  <p>
    <%= f.label :auhtor %><br />
    <%= f.text_field :author, required: true %>
  </p>
  
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
  <%end%>
</div>
